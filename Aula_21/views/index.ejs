<%- include('./partials/head') %>
<%- include('./partials/header') %>
  <!--carossel-->
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/images/carousel-1.jpg" class="d-block w-100" alt="macarão">
      </div>
      <div class="carousel-item">
        <img src="/images/carousel-2.jpg" class="d-block w-100" alt="macarrão 2">
      </div>
      <div class="carousel-item">
        <img src="/images/carousel-3.webp" class="d-block w-100" alt="lasaha">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden"></span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden"></span>
    </a>
  </div>

  <!--cards-->
  <main class="container">
    <h2>Receitas</h2>
    <p>Abaixo temos as receitas mais procuradas da semana</p>
    <section class="receitas" id="receitas">
      <div class="card-deck">
        <% cards.forEach(card => {%>
        <div class="col-12 col-md-6 col-lg-4 mt-3">
          <div class="card">
              <img src=<%= card.imagem %> class="card-img-top" alt="massa_1">
              <div class="card-body">
                <h5 class="card-title"><%= card.titulo %></h5>
                <p class="card-text"><%= card.texto %></p>
                <a href="#" class="btn btn-primary"><%= card.botao %></a>
              </div>
          </div>
        </div>
            <%})%>
      </div>
    
    </section>

    <!--localização no site-->
    <section class="localizacao mt-5" id="localizacao">
      <h2>Localização</h2>
      <p>Verifique a localição da nossa loja para nos fazer uma visita</p>
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3655.8282249599915!2d-46.66886048595504!3d-23.610492684658507!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce5a09161d82d3%3A0xeea06a7cc702728a!2sShopping%20Ibirapuera!5e0!3m2!1sen!2sbr!4v1607388178031!5m2!1sen!2sbr"
        width="100%" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false"
        tabindex="0"></iframe>
    </section>

    <!--form-->
    <section class="formulario mt-5" id="formulario">
      <h2>Envie sua receita</h2>
      <p>Preencha as informações abaixo para compartilhar conosco sua receita</p>
      <form action="">
        <div class="row">
          <div class="col">
            <label for="nome">Nome </label>
            <input type="text" class="form-control" name="nome" id="nome" placeholder="Preencha seu nome" aria-label="Informe seu nome">
          </div>

          <div class="col">
            <label for="email">Email </label>
            <input type="text" class="form-control" name="email" id="email" placeholder="Informe seu email" aria-label="Informe seu email">
          </div>
        </div>    
          <div class="row">
            <div class="col my-3">
              <label for="mensagem">Mensagem</label>
              <textarea class="form-control" name="mensagem" id="mensagem" placeholder="Informe a receita" aria-label="Informe receita"></textarea>
            </div>
          </div>  
            <button type="button" class="btn btn-primary">Enviar</button>
        </form>
    </section>
  </main>
  <%- include("./partials/footer.ejs") %>
</body>

</html>